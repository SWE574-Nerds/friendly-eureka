<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.canma.eurekaswe.fragments.ListoryCreateMapFragment"
    >


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapNew"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.canma.eurekaswe.MapsActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ic_gps" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:background="@color/white"
        android:id="@+id/relLayout1">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_gps" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_search"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@color/white"
            android:hint="Enter Address, City or Zip Code"
            android:singleLine="true"
            android:lines="1"
            android:imeOptions="actionSearch"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ic_magnify"
            android:layout_toEndOf="@+id/ic_magnify"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ic_gps"
        style="@android:style/Widget.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/relLayout1"
        android:layout_alignRight="@+id/relLayout1"
        android:layout_below="@+id/relLayout1"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_magnify" />

    <Button
        android:id="@+id/create_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapNew"
        android:layout_below="@+id/relLayout1"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/delete_button"
        android:layout_toStartOf="@+id/delete_button"
        android:text="create"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapNew"
        android:layout_alignLeft="@+id/relLayout1"
        android:layout_alignStart="@+id/relLayout1"
        android:layout_below="@+id/relLayout1"
        android:text="ToggleButton"
        android:textOff="Path"
        android:textOn="Marker"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/delete_button"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapNew"
        android:layout_below="@+id/relLayout1"
        android:layout_toLeftOf="@+id/ic_gps"
        android:backgroundTint="@color/white"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/circle_button"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relLayout1"
        android:layout_toRightOf="@+id/toggleButton"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/category_background" />


</RelativeLayout>
