<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Username"
        android:textStyle="bold" />


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="10dk önce"
            android:textColor="@color/battleship_grey"
            android:textSize="8sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:breakStrategy="simple"
        android:text="Kamil bugün bi yerdeydi"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/item_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:breakStrategy="simple"
        android:text="Kamil bugün bi yerdeydi"
        android:textColor="@color/aurometalsaurus"
        android:textStyle="italic"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name"
        android:layout_toLeftOf="@+id/delete_button"
        android:layout_toStartOf="@+id/delete_button" />


     <Button
        android:id="@+id/follow_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Follow"
        android:textColor="@color/azure"
         android:layout_below="@+id/item_name"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/delete_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="DELETE"
        android:textColor="@color/bean_red"
        android:layout_below="@+id/item_name"
        android:layout_toLeftOf="@+id/follow_button"
        android:layout_toStartOf="@+id/follow_button" />

    <com.example.canma.eurekaswe.components.NewImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/temp_image"
        android:layout_below="@+id/follow_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/item_expl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:breakStrategy="simple"
        android:text="Explanation of Listory"
        android:textSize="15dp"
        android:layout_below="@+id/item_image"
        android:layout_alignLeft="@+id/item_time_info"
        android:layout_alignStart="@+id/item_time_info" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/category_recycler"
        android:layout_below="@+id/item_expl"
        android:layout_alignLeft="@+id/item_expl"
        android:layout_alignStart="@+id/item_expl"
        android:layout_marginTop="19dp">

    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_asparagus"
        android:id="@+id/view" />


</RelativeLayout>